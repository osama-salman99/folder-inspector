<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="800.0" prefWidth="1000.0" xmlns="https://javafx.com/javafx"
            xmlns:fx="https://javafx.com/fxml/1"
            fx:controller="osmosis.folder.inspector.controllers.MainController">
    <center>
        <VBox alignment="CENTER"
              spacing="10">
            <VBox fx:id="informationBox"
                  alignment="CENTER"
                  spacing="10">
                <TextField fx:id="pathInputField"
                           focusTraversable="false"
                           maxWidth="400"
                           promptText="Path"
                           onAction="#onEnter"/>
                <Button text="Inspect"
                        onAction="#inspect"/>
            </VBox>
            <ProgressIndicator fx:id="progressIndicator"
                               prefWidth="40"
                               prefHeight="40"
                               visible="false"/>
        </VBox>
    </center>
</BorderPane>